<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/firstLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="16dp"
            android:fontFamily="@font/arista_pro_bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/secondLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="16dp"
            android:fontFamily="@font/arista_pro_bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/thirdLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="16dp"
            android:fontFamily="@font/arista_pro_bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/fourthLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="16dp"
            android:fontFamily="@font/arista_pro_bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/fifthLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="16dp"
            android:fontFamily="@font/arista_pro_bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/sixthLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="16dp"
            android:fontFamily="@font/arista_pro_bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/seventhLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="16dp"
            android:fontFamily="@font/arista_pro_bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/eigthLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="16dp"
            android:fontFamily="@font/arista_pro_bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/ninethLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="16dp"
            android:fontFamily="@font/arista_pro_bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tenthLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="10"
            android:textSize="16dp"
            android:fontFamily="@font/arista_pro_bold"
            android:gravity="center"/>

    </LinearLayout>


    <com.google.android.material.slider.Slider
        android:id="@+id/sliderMat"
        android:theme="@style/ThemeOverlay.Slider"
        style="@style/ThemeOverlay.Slider"
        android:layout_width="match_parent"
        android:layout_height="80dp"/>

</LinearLayout>
